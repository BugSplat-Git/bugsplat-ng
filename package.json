{
  "name": "my-angular-crasher",
  "version": "0.0.0-development",
  "database": "fred",
  "scripts": {
    "ng": "ng",
    "prestart": "npm run build:lib && npm run build",
    "start": "http-server ./dist/my-angular-crasher/browser",
    "build": "ng build my-angular-crasher --configuration=development",
    "build:app": "ng build my-angular-crasher --configuration=production --base-href=/my-angular-crasher/",
    "build:ci": "npm run build:lib && npm run build:app",
    "build:lib": "ng build bugsplat-ng --configuration=production",
    "postbuild": "npm run symbols:dev",
    "postbuild:app": "npm run symbols",
    "postbuild:lib": "copyfiles README.md dist/bugsplat-ng",
    "test": "ng test",
    "lint": "ng lint",
    "release:lib": "npm run build:lib && cd dist/bugsplat-ng && npm publish",
    "symbols:dev": "node -r dotenv/config ./node_modules/@bugsplat/symbol-upload/dist/bin/index.js -d ./dist/my-angular-crasher/browser -v dev",
    "symbols": "node -r dotenv/config ./node_modules/@bugsplat/symbol-upload/dist/bin/index.js -d ./dist/my-angular-crasher/browser",
    "prepare": "husky install",
    "pretest:app": "npm run build:lib",
    "pretest:lib": "npm run build:lib",
    "pretest:ci": "npm run build:lib",
    "test:app": "ng test my-angular-crasher --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:lib": "ng test bugsplat-ng --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:ci": "npm run test:lib && npm run test:app",
    "semantic-release": "semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.2",
    "@angular/common": "^17.0.2",
    "@angular/compiler": "^17.0.2",
    "@angular/core": "^17.0.2",
    "@angular/forms": "^17.0.2",
    "@angular/platform-browser": "^17.0.2",
    "@angular/platform-browser-dynamic": "^17.0.2",
    "@angular/router": "^17.0.2",
    "bugsplat": "^8.0.0",
    "core-js": "^2.6.3",
    "rxjs": "^6.6.3",
    "tslib": "^2.3.0",
    "zone.js": "^0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.10",
    "@angular-eslint/builder": "17.0.0",
    "@angular-eslint/eslint-plugin": "17.0.0",
    "@angular-eslint/eslint-plugin-template": "17.0.0",
    "@angular-eslint/schematics": "17.0.0",
    "@angular-eslint/template-parser": "17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.2",
    "@angular/language-service": "^17.0.2",
    "@bugsplat/symbol-upload": "^7.2.1",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.53.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "jasmine-auto-spies": "^8.0.1",
    "jasmine-core": "^3.99.1",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-teamcity-reporter": "^1.1.0",
    "ng-packagr": "^17.0.0",
    "semantic-release": "^21.0.7",
    "semantic-release-cli": "^5.2.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BugSplat-Git/bugsplat-ng.git"
  }
}