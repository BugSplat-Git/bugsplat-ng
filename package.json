{
  "name": "my-angular-crasher",
  "version": "0.0.0-development",
  "database": "fred",
  "scripts": {
    "ng": "ng",
    "prestart": "npm run build:lib && npm run build",
    "start": "http-server ./dist/my-angular-crasher/browser",
    "build": "ng build my-angular-crasher --configuration=development",
    "build:app": "ng build my-angular-crasher --configuration=production --base-href=/my-angular-crasher/",
    "build:ci": "npm run build:lib && npm run build:app",
    "build:lib": "ng build bugsplat-ng --configuration=production",
    "postbuild": "npm run symbols",
    "postbuild:app": "npm run symbols",
    "postbuild:lib": "copyfiles README.md dist/bugsplat-ng",
    "test": "ng test",
    "lint": "ng lint",
    "release:lib": "npm run build:lib && cd dist/bugsplat-ng && npm publish",
    "symbols": "node -r dotenv/config ./node_modules/@bugsplat/symbol-upload/dist/bin/index.js -d ./dist/my-angular-crasher/browser",
    "prepare": "husky install",
    "pretest:app": "npm run build:lib",
    "pretest:lib": "npm run build:lib",
    "pretest:ci": "npm run build:lib",
    "test:app": "ng test my-angular-crasher --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:lib": "ng test bugsplat-ng --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:ci": "npm run test:lib && npm run test:app",
    "semantic-release": "semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.6",
    "@angular/common": "^18.0.6",
    "@angular/compiler": "^18.0.6",
    "@angular/core": "^18.0.6",
    "@angular/forms": "^18.0.6",
    "@angular/platform-browser": "^18.0.6",
    "@angular/platform-browser-dynamic": "^18.0.6",
    "@angular/router": "^18.0.6",
    "bugsplat": "^8.0.1",
    "core-js": "^3.37.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.3",
    "zone.js": "^0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.7",
    "@angular-eslint/builder": "18.1.0",
    "@angular-eslint/eslint-plugin": "18.1.0",
    "@angular-eslint/eslint-plugin-template": "18.1.0",
    "@angular-eslint/schematics": "18.1.0",
    "@angular-eslint/template-parser": "18.1.0",
    "@angular/cli": "^18.0.7",
    "@angular/compiler-cli": "^18.0.6",
    "@angular/language-service": "^18.0.6",
    "@bugsplat/symbol-upload": "^9.1.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jasmine": "^5.1.4",
    "@types/jasminewd2": "^2.0.13",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.5.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jasmine-auto-spies": "^8.0.1",
    "jasmine-core": "^5.1.2",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-teamcity-reporter": "^1.1.0",
    "ng-packagr": "^18.0.0",
    "semantic-release": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BugSplat-Git/bugsplat-ng.git"
  }
}
